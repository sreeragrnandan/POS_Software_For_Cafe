<Window x:Class="Callista_Cafe.SupplierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Callista_Cafe"
        mc:Ignorable="d"
                Title="Suppliers | Callista Cafe"
        MinHeight="720"
        MinWidth="1280"
        WindowState="Maximized"
        WindowStyle="ThreeDBorderWindow"
        Loaded="Window_Loaded" Unloaded="SupplierWindow_OnUnloaded"
>
    <!--Background="#072233"-->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBlock Text="Enter Supplier Details"/>
            <StackPanel Orientation="Horizontal" >
                <Label Content="Id:"/>
                <TextBox x:Name="Txtsupplierid" MinWidth="200"/>
            </StackPanel>
        <StackPanel Orientation="Horizontal" >
                <Label Content="Name:"/>
                <TextBox x:Name="Txtsuppliername" MinWidth="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Mobile:"/>
                <TextBox x:Name="Txtsuppliermobile" MinWidth="200"/>
            </StackPanel>
            <Button x:Name="SubmitSupplier" Background="LawnGreen" Content='Submit' MinHeight="25" MaxWidth="100" Click="SubmitSupplierClick"/>
        </StackPanel>
</Window>
