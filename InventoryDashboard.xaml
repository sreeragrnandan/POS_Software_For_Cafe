<Window x:Class="Callista_Cafe.InventoryDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Callista_Cafe"
        mc:Ignorable="d"
        Title="Inventory Dashboard | Callista Cafe"
        MinHeight="720"
        MinWidth="1280"
        Height="720"
        Width="1280"
        WindowState="Maximized"
        WindowStyle="ThreeDBorderWindow"
        Background="#072233">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition MaxWidth="600" MinWidth="500"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.ColumnSpan="1" CornerRadius="0 100 10 0">
                <Border.Background>
                    <SolidColorBrush Color="DarkSlateGray" Opacity=".5"/>
                </Border.Background>
            </Border>
            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="10 0 0 0" >
                <StackPanel Margin="10 0 0 10">
                    <TextBlock Text="Inventory Dashboard" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="48" Foreground="BlanchedAlmond" FontFamily="Californian FB" Margin="0,30,0,0"></TextBlock>
                </StackPanel>
                
                
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Label Content="ID :" FontSize="20" Foreground="White" Margin="10 0 10 0" MinWidth="70"/>
                    <TextBlock x:Name="idTextBlock" Text="ID" FontSize="18" Foreground="White" MinWidth="300" Background="Gray" TextAlignment="Center" VerticalAlignment="Center" Height="30" />
                </StackPanel>
                
                
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Label Content="Name :" FontSize="20" Foreground="White" Margin="10 0 10 0" MinWidth="70"/>
                    <TextBox x:Name="nameTxtBox"  FontSize="18" Foreground="White" MinWidth="300" Background="Transparent" TextAlignment="Center" VerticalAlignment="Center" Height="30" BorderThickness="2" />
                </StackPanel>
                
                
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Label Content="Price :" FontSize="20" Foreground="White" Margin="10 0 10 0" MinWidth="70"/>
                    <TextBox x:Name="priceTxtBox" FontSize="18" Foreground="White" MinWidth="300" Background="Transparent" TextAlignment="Center" VerticalAlignment="Center" Height="30"  BorderThickness="2"/>
                </StackPanel>
                
                
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Label Content="Quantity :" FontSize="20" Foreground="White" Margin="10 0 10 0" MinWidth="70"/>
                    <TextBox x:Name="qtyTxtBox" FontSize="18" Foreground="White" MinWidth="300" Background="Transparent" TextAlignment="Center" VerticalAlignment="Center" Height="30"  BorderThickness="2"/>
                </StackPanel>
                
                
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Label Content="Exp Date :" FontSize="20" Foreground="White" Margin="10 0 10 0" MinWidth="70"/>
                    <DatePicker x:Name="expDate" FontSize="18" Background="Transparent"  MinWidth="300" Height="30" ></DatePicker>
                </StackPanel>
                
                
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Label Content="Unit :" FontSize="20" Foreground="White" Margin="10 0 10 0" MinWidth="70"/>
                    <ComboBox x:Name="unitComboBox" FontSize="18" Background="Transparent" MinWidth="300" IsEditable="True" Height="30">
                        <ComboBoxItem>KG</ComboBoxItem>
                        <ComboBoxItem>Liter</ComboBoxItem>
                        <ComboBoxItem>Nos</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
                
                
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Label Content="Min Qty :" FontSize="20" Foreground="White" Margin="10 0 10 0" MinWidth="70"/>
                    <TextBox x:Name="minQtyTxtBox" FontSize="18" Foreground="White" MinWidth="300" Background="Transparent" TextAlignment="Center" VerticalAlignment="Center" Height="30"  BorderThickness="2"/>
                </StackPanel>
                
                
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Label Content="Supplier :" FontSize="20" Foreground="White" Margin="10 0 10 0" MinWidth="70"/>
                    <ComboBox x:Name="supplierComboBox" FontSize="18" Background="Transparent" MinWidth="300" IsEditable="False" Height="30"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,30,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="150">
                    <Button x:Name="addBtn" Height="30" Content="Add" HorizontalAlignment="Center" MinWidth="150" Margin="0,0,50,0" FontSize="18" Click="addBtn_Click"/>
                    <Button x:Name="updateBtn"  Height="30" Content="Update" MinWidth="150" HorizontalAlignment="Center" Margin="50,0,0,0" FontSize="18" Click="updateBtn_Click"/>
                </StackPanel>
                
                
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Vertical">
                <StackPanel>
                    
                </StackPanel>
                <StackPanel>
                    <DataGrid x:Name="InventoryItems" IsReadOnly="True" ColumnWidth="*" AutoGenerateColumns="False" x:FieldModifier="public" Margin="20 20 20 0" Loaded="InventoryItems_Loaded" SelectionChanged="InventoryItems_SelectionChanged"  >

                        <DataGrid.Resources>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="BorderThickness" Value="0,0,1,2"/>
                                <Setter Property="BorderBrush" Value="Black"/>
                                <Setter Property="FontSize" Value="16"/>
                            </Style>
                        </DataGrid.Resources>
                        
                        <DataGrid.Columns >
                            <DataGridTextColumn Header=" ID" Binding="{Binding id}"/>
                            <DataGridTextColumn Header=" NAME" Binding="{Binding ingredient}"/>
                            <DataGridTextColumn Header=" PRICE"  Binding="{Binding price}"/>
                            <DataGridTextColumn Header=" Qty" Binding="{Binding quantity}"/>
                            <DataGridTextColumn Header=" EXP DATE" Binding="{Binding e_date}"/>
                            <DataGridTextColumn Header=" UNIT" Binding="{Binding unit}"/>
                            <DataGridTextColumn Header=" MIN Qty" Binding="{Binding min_quantity}"/>
                            <DataGridTextColumn Header=" SUPPLIER" Binding="{Binding supplier_name}"/>
                        </DataGrid.Columns>
                        
                    </DataGrid>
                </StackPanel>
                
            </StackPanel>
        </Grid>
    </Grid>
</Window>
